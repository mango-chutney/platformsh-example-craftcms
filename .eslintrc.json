{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "node": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "spaced-comment": ["error", "always", {
      "line": {
        "exceptions": ["*", ":"]
      },
      "block": {
        "exceptions": ["*", ":"],
        "balanced": false
      }
    }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}
